        <h5 class="card-title">{{maison.title}}
          <br>
         <small> {{maison.rooms}} pieces</small>
         <small> surface: {{maison.surface}} m²</small>
         
        </h5> 
      </div>
      <ul class="list-group list-group-flush">
       <li class="list-group-item"> prix: {{ maison.price|number_format(2,',', '') }} € </li>
         
      </ul>

      <div class="card-body">
       
        <a href="#" class="btn btn-primary">Voir plus</a>
      </div>
    </div>
</div>
    {#   {% endif %}  #}
    {% endfor %}

     
  </div>
